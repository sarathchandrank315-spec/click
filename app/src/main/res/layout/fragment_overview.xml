<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".ui.theme.ui.dashBoard.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Total Income & Expenses -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- Income -->
            <LinearLayout
                android:id="@+id/cardIncome"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/bg_incone_card"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:padding="8dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Total Income"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTotalIncome"
                    android:text="$8,500"
                    android:textColor="#7C4DFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Expense -->
            <LinearLayout
                android:id="@+id/cardExpense"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/bg_expense_card"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Expenses"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvTotalExpense"
                    android:text="$3,800"
                    android:textColor="#FF7043"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Statistics -->
        <TextView
            android:layout_height="wrap_content"
           android:layout_width="wrap_content"
            android:text="Statistics"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apr 01 - Apr 30"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp" />

        <!-- Income / Expense Toggle -->
        <!-- Tab Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tabContainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/color_main_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIncome"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Income"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    app:cornerRadius="25dp"
                    app:backgroundTint="@color/white"
                    android:stateListAnimator="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExpenses"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Expenses"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    app:cornerRadius="25dp"
                    app:backgroundTint="@color/white"
                    android:stateListAnimator="@null" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTransactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>


    </LinearLayout>
</ScrollView>
